<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vmvlimayrac.app.vmv.ConsignePremierPointActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">
        <TextView
                android:text="Bravo !"
                android:textSize="50dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2"/>
        <TextView
                android:text="Vous voilà maintenant à votre point de depart, à partir de maintenant vous allez pouvoir répondre aux différentes questions !"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:textSize="25dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <TextView
            android:text="Attention : Vous ne pourrez donner qu'une seule réponse par point, chaque bonne réponse fait gagner 5 points !"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>

        <TextView
                android:text="A vous de jouer !"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>

    </LinearLayout>

    <Button
            android:text="Go !"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonjaicompris" android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@drawable/custom_button_violet_arrondi"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</android.support.constraint.ConstraintLayout>
