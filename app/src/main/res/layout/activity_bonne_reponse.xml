<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.vmvlimayrac.app.vmv.BonneReponseActivity">

    <TextView
            android:text="BRAVO !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewbravo"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@color/colorOk"
            android:layout_marginEnd="8dp"/>


    <Button
            android:text="Continuer !"
            android:layout_width="437dp"
            android:layout_height="46dp" android:id="@+id/buttonok"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
    />
    <android.support.v7.widget.RecyclerView

            android:layout_width="395dp"
            android:layout_height="594dp" tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewbravo" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonok" android:id="@+id/recyclerViewScore"/>

</android.support.constraint.ConstraintLayout>
