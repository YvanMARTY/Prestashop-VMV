<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vmvlimayrac.app.vmv.EndActivity">

    <TextView
            android:text="FINI !"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/textViewFini"/>

    <TextView
            android:text="Bravo, vous avez répondu à toutes les questions, rendez-vous au point de rassemblement. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"

            android:textAlignment="center"
            android:id="@+id/textViewExplicationFin" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonRassemblement" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewFini"/>
    <Button
            android:text="J'y vais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_violet_arrondi"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:id="@+id/buttonRassemblement"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>
