<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vmvlimayrac.app.vmv.InfoFoJoueurActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Salut équipe"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/texthello"
                android:textAlignment="center"/>
        <TextView
                android:text="TextView"
                android:layout_marginTop="10dp"
                android:textSize="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textNomEquipe"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"/>
        <TextView
                android:text="Votre point de depart est : "
                android:layout_marginTop="30dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textlepointest"
                android:textAlignment="center"
        />
        <TextView
                android:text="TextView"
                android:layout_marginTop="10dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textPointDepart"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
        />

        <TextView
                android:text="Rendez-vous au point jaune sur la carte, ce point est votre point de depart. Une fois arrivé au point cliquez dessus pour découvrir la question ! "
                android:layout_marginTop="80dp"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textConsigne"
                android:textAlignment="center"
        />

    </LinearLayout>

    <Button
            android:text="GO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/buttonGO"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:background="@drawable/custom_button_violet_arrondi"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
