            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@color/colorKO"
            android:textStyle="bold"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:text="tetetett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewBonneReponse"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="50sp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="52dp" app:layout_constraintBottom_toTopOf="@+id/buttonko"
            app:layout_constraintHorizontal_bias="0.483" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView87896" app:layout_constraintVertical_bias="0.492"/>

    <TextView
            android:text="La bonne réponse était :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView87896"
