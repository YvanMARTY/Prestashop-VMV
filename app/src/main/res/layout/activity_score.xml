<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vmvlimayrac.app.vmv.ScoreActivity">


    <TextView
            android:text="SCORE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:id="@+id/textView7"/>


    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerViewScore" app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonSync"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>



    <Button
            android:text="Synchroniser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonSync"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="#F8FF8F"
            android:background="@drawable/custom_button_violet_arrondi"/>


</android.support.constraint.ConstraintLayout>
